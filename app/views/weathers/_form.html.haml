= form_for @weather do |f|
  - if @weather.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weather.errors.count, "error")} prohibited this weather from being saved:"
      %ul
        - @weather.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day
    = f.date_select :day
  .field
    = f.label :min
    = f.text_field :min
  .field
    = f.label :max
    = f.text_field :max
  .actions
    = f.submit 'Save'
